{
  "name": "@semantic/create-html",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "author": {
    "name": "buildy-ui",
    "url": "https://github.com/buildy-ui/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/buildy-ui/semantic-starter.git"
  },
  "scripts": {
    "tw4:html": "bun x @tailwindcss/cli -i ./assets/input-tw4.css -o ./html/styles.css --minify",
    "tw3:html": "bun x -p tailwindcss@3 tailwindcss -i ./assets/input-tw3.css -o ./html/styles.legacy.css --minify -c ./config/tailwind.config.js",
    "tw3:shadcn": "bun x -p tailwindcss@3 tailwindcss -i ./html/about/input-tw3.css -o ./html/about/styles.legacy.css --minify -c ./html/about/tailwind.config.js",
    "html": "bun run tw4:html && bun run tw3:html",
    "analyze:dom": "bun run --bun scripts/analyze-dom.ts",
    "rewrite:semantic": "bun run --bun scripts/rewrite-semantic.ts",
    "compile:route": "bun run --bun scripts/compile-route-css.ts"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "glob": "^11.0.3",
    "parse5": "^7.2.0",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.3",
    "sharp": "^0.33.0",
    "tailwindcss": "^4.1.9",
    "tailwindcss3": "npm:tailwindcss@3.4.14"
  },
  "dependencies": {
    "@types/bun": "^1.2.23"
  }
}
